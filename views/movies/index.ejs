<!DOCTYPE html>
<html>
  <head>
    <title> <%= title %> </title>
    <% include ../partials/head.ejs %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="row">
      <h1 class="col s4 offset-s1"><%= title %></h1>
    </div>
    <div class="collection">
    <% movies.forEach(function(movie) { %>
      <div class="collection-item center blue-grey lighten-1">
        <span><a class="white-text" href="<%= '/movies/' + movie.id %>"><%= movie.title %></a></span>
      </div>
    <% }) %>
    </div>
    <div class="row">
      <div class="col s12 center">
        <a href="/movies/new"><button class="btn-large">Add a Movie</button></a>
        <a href="/user"><button class="btn-large">Home</button></a>
      </div>
    </div>
  </body>
</html>
