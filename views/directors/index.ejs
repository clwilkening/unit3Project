<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../partials/head.ejs %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
<body>
  <div class="row">
    <h1 class="col s4 offset-s1">Directors</h1>
  </div>
  <div class="row">
    <a class="col s2 offset-s4" href='/directors/new'><button class="btn-large">create a new director</button></a>
    <a class="col s2" href="/user"><button class="btn-large">Home</button></a>
  </div>
  <div class="row">
  <div class="collection">
    <% directors.forEach(function(director) { %>
    <div class="collection-item center blue-grey lighten-1">
      <span><a class="white-text" href="<%= '/directors/' + director.id %>"><%= director.name %></a></span>
    </div>
    <% }) %>
  </div>
  </div>
</body>
</html>

